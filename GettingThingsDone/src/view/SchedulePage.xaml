<UserControl x:Class="GettingThingsDone.src.view.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GettingThingsDone.src.view"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Background="DimGray">

    <Grid Margin="0,67,0,124">
         <!--local:StaticListPanel DataContext="{Binding Today}" x:Name="ListPanel" Width="100" MouseMove="StaticListPanel_MouseMove_1" AllowListDrop="True"/-->

        <ItemsControl Grid.Row="2" ItemsSource="{Binding Schedules}" AlternationCount="2" >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" AllowDrop="True"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate >
                    <Border Name="DTBorder" BorderBrush="Black" BorderThickness="0" Margin="8" CornerRadius="2">
                        <local:StaticListPanel Name="ListPanel" Width="100" MouseMove="StaticListPanel_MouseMove_1" AllowListDrop="True"/>
                    </Border>
                    <DataTemplate.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                            <Setter TargetName="ListPanel" Property="LabelBackground" Value="MidnightBlue" />
                        </Trigger>
                        <Trigger  Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="LabelBackground" Value="DarkRed" TargetName="ListPanel"/>
                        </Trigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
    
</UserControl>
