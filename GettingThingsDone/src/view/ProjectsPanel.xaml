<UserControl x:Class="GettingThingsDone.src.view.ProjectsPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Label Name="CreateProjectLink" Content="Create a new project" Foreground="AntiqueWhite" Background="Indigo" VerticalAlignment="Bottom" HorizontalContentAlignment="Center"
               Margin="0,250,0,0" VerticalContentAlignment="Center" Width="300" Height="50" MouseEnter="CreateProjectLinkEnter" MouseLeave="CreateProjectLinkLeave"
               MouseLeftButtonDown="CreateProjectClick"/>
                       <ListBox x:Name="FileList" ItemsSource="{Binding Projects}" HorizontalAlignment="Left" Height="160" Margin="10,10,0,0" VerticalAlignment="Top" Width="280">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Title}" MouseDoubleClick="UpdateProject"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
